<view class='editing_head'>
  <text class='editing_txt'>编辑资料</text>
  <view bindtap='headimg' class='editing_headimg'>
    头像
    <image class='edt_head abstract_img ' src='{{uploadpath}}people/{{photo}}'></image>
  </view>

  <view class='editing_photo'>
    <view class='editing_img'>
      <navigator url='/pages/photo/photo'>
        <cover-image src='{{uploadpath}}resource/{{res.insert}}' class='editing_insert edt_img'></cover-image>
      </navigator>
      <scroll-view class="editing-box" scroll-x="true" wx:for="photolist" wx:key="k">
        <view class="editing-item">
          <image src='{{uploadpath}}people/{{photolist.photo}}' class='edt_img '></image>
        </view>
      </scroll-view>
    </view>
  </view>
</view>


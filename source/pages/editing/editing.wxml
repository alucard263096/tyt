<view class='editing_data'>
  <view class='data' style='margin-right:70rpx;'>
    <label class='mine_dt h4-5'>姓名</label>
    <label class='data_1 h4-5'>{{people.name}}
    </label>
  </view>
</view>


<view class='editing_data'>
  <view class='data'>
    <label class='mine_dt h4-5'>昵称</label>
    <navigator class='data_1 h4-5' url='/pages/setname/setname'>可编辑资料
      <image src='{{uploadpath}}resource/{{res.right_s}}' class='dt_imgs icon-15-1'></image>
    </navigator>
  </view>
</view>

<view class='editing_data'>
  <view class='edt_data'>
    <label class='mine_dt h4-5'>性别</label>
    <picker mode="selector" bindchange="bindPickerChange" value="{{sx}}" range="{{sex}}">
      <image src='{{uploadpath}}resource/{{res.right_s}}' class='dt_imgs icon-15-1'></image>
      <view class="edt_pf fontcolor h5">
        <input disabled='disabled' class='margin-top-3 h4-5' placeholder='{{people.gender_name}}' value='{{sex[sx]}}' name="sex" style='text-align:right'>
        </input>
      </view>
    </picker>
  </view>
</view>

<view class='editing_data'>
  <view class='data' style='margin-right:70rpx;'>
    <label class='mine_dt h4-5'>年龄</label>
    <label class='data_1 h4-5'>{{people.age}}岁
    </label>
  </view>
</view>

<view class='editing_data'>
  <view class='data' style='margin-right:70rpx;'>

<!--pages/home/home.wxml-->
<view>
  <swiper autoplay='true' indicator-dots='true' style='width:750rpx;height:200rpx;' circular>
    <swiper-item wx:for="{{indexbanner}}" wx:key="k">
      <view>
        <image src='{{uploadpath}}indexbanner/{{item.img}}' style='width:750rpx;height:200rpx;' mode="aspectFill"></image>
      </view>
    </swiper-item>
  </swiper>
</view>

<navigator url='/pages/?shownext=Y&id={{item.id}}' class='pos flex-row flex-center'    >
  <view class='padding-L-T-R-40' >
    <view class='syn' style='position:absolute;'>
      <view class='name_1 h4'>{{people.name}}</view>
      <view class='ifm h5'>
        <label class='age'>{{people.age}}岁</label>|
        <label class='height'>{{people.height}}cm</label>|
        <label class='education'>{{people.quality_name}}</label>|
        <label class='income'> {{people.income}}元/月a</label>
      </view>
    </view>
    <view>
      <image class=' border-radius-5 ' src='{{uploadpath}}people/{{people.photo}}' style='width:654rpx;height:850rpx;'>
      </image>
    </view>

  </view>
</navigator>

<navigator  animation="{{animationLsi}}"  url='/pages/?shownext=Y&id={{item.id}}' class='pos  flex-row flex-center '  >

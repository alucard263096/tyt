  height: 160rpx;
  background: white;
  border-radius: 25rpx;
  margin-top: 660rpx;
  margin-left: 25rpx;
  position:absolute;
}

.ifm {
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.name_1 {
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.ig {
  width: 644rpx;
  height: 850rpx;
  border-radius: 30rpx;
  /* box-shadow: rgb(238, 215, 215) 2rpx 2rpx 6rpx 2rpx; */
  margin-bottom: 20rpx;
}
.pos {
  position: absolute;
}
.inleftswipe {
  animation-iteration-count: infinite;
  -webkit-animation-iteration-count: infinite;
  animation: left 0.5s;
  -webkit-animation: left 0.5s;
}

.inrightswipe {
  animation-iteration-count: infinite;
  -webkit-animation-iteration-count: infinite;
  animation: right 0.5s;
  -webkit-animation: right 0.5s;
}

@keyframes left {
  0% {
    right: 0vw;
  }

  100% {
    right: 100vw;
  }
}

@keyframes right {
  0% {
    left: 0vw;
  }

  100% {
    left: 100vw;
  }
}

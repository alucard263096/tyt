/* pages/home/home.wxss */

page {
  width: 750rpx;
  overflow-x: hidden;
}

.syn {
  width: 600rpx;
  height: 180rpx;
  background: white;
  border-radius: 25rpx;
  margin-top: 640rpx;
  margin-left: 25rpx;
  position: absolute;
}

.ifm {
  margin-left: 20rpx;
  margin-top: 10rpx;
}

.name_1 {
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.ig {
  width: 644rpx;
  height: 850rpx;
  border-radius: 30rpx;
  /* box-shadow: rgb(238, 215, 215) 2rpx 2rpx 6rpx 2rpx; */
  margin-bottom: 20rpx;
}

.pos {
  position: absolute;
}

.inleftswipe {
  animation-iteration-count: infinite;
  -webkit-animation-iteration-count: infinite;
  animation: left 0.5s;
  -webkit-animation: left 0.5s;
}

.inrightswipe {
  animation-iteration-count: infinite;
  -webkit-animation-iteration-count: infinite;
  animation: right 0.5s;
  -webkit-animation: right 0.5s;
}

@keyframes left {
  0% {
    right: 0vw;
  }

  100% {
    right: 100vw;
  }
}

@keyframes right {
  0% {
    left: 0vw;
  }

  100% {
    left: 100vw;
  }
}

.area {
  top: -80vh;
  left: -110vw;
  height: calc(  100vh - 200rpx );
  width:  200vw; /* background:#000; */
  background: rgba(0, 0, 0, 0);
}

.mo_top {
  position: absolute;
  top: 0;
  left: 0;
  height: 100vh;
  width: 100vw;
  background: rgba(0, 0, 0, 0);
}

.image {
  position: relative;
  width: 100vw;
  height: 100vh;
}

.content_s {
  z-index: 999;
}


